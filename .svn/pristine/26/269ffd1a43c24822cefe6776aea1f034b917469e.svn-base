package com.hd.common.util;

import java.util.ArrayList;
import java.util.List;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

public class JsonType<K> {

	private List<K> serviceList;// K 为业务bean

	public List<K> getServiceList() {
		return serviceList;
	}

	// 为代金卷bean 和 业务bean 设置值
	public void setObjectList(String jsonString, Class<?> KK) {

		JSONObject json = JSONObject.fromObject(jsonString);
		JSONArray service = JSONArray.fromObject(json.get("service"));

		// 业务模块非空
		if (service.size() > 0) {
			serviceList = new ArrayList<K>();
			for (int i = 0; i < service.size(); i++) {
				@SuppressWarnings("unchecked")
				K k = (K) JSONObject.toBean(service.getJSONObject(i), KK);
				serviceList.add(k);
			}

		}

	}

}
